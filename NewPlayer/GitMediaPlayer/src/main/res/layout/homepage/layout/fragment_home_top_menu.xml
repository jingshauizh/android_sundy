<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/homepage_menu_index"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_index" />

    <View  style="@style/style_home_top_menu_line"   />

    <TextView
        android:id="@+id/homepage_menu_live"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_live" />

    <View  style="@style/style_home_top_menu_line"   />

    <TextView
        android:id="@+id/homepage_menu_tvseries"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_tvseries" />
    <View  style="@style/style_home_top_menu_line"   />
    <TextView
        android:id="@+id/homepage_menu_movie"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_movie" />

    <View  style="@style/style_home_top_menu_line"   />
    <TextView
        android:id="@+id/homepage_menu_cartoon"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_cartoon" />

    <View  style="@style/style_home_top_menu_line"   />

    <TextView
        android:id="@+id/homepage_menu_favourite"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_favourite" />

    <View  style="@style/style_home_top_menu_line"   />

    <TextView
        android:id="@+id/homepage_menu_recommendview"
        style="@style/style_home_top_menu_title"
        android:text="@string/homepage_menu_recommendview" />

</LinearLayout>

