<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- List of Book Titles -->
    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/btn_titlesactivity_open_dialog">
    </Button>>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.jingshuai.android.fregmentapp.fragment.TitlesListFragment"
        android:id="@+id/fragmentTitles"/>
    <!-- Description of selected book -->
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.jingshuai.android.fregmentapp.fragment.TitleDescriptionFragment"
        android:id="@+id/fragmentDescription"/>
</LinearLayout>