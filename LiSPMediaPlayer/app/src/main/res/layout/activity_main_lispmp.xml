<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    <CheckBox android:id="@+id/isSender"
        android:text="isSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <EditText
        android:id="@+id/Remote_IP"        
        android:hint="remote ip address"
        android:layout_width="fill_parent"
        android:text="192.168.0.4"
        android:layout_height="wrap_content"/>
    <EditText 
        android:id="@+id/Remote_Port"
        android:hint="remote port"
        android:text="6666"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <EditText
        android:id="@+id/Local_IP" 
        android:hint="local ip address"
        android:text="192.168.0.3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <EditText 
        android:id="@+id/Local_Port" 
        android:hint="local port"
        android:text="5555"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button 
        android:id="@+id/button" 
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
