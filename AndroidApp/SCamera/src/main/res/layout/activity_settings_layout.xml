<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bodyBackground"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shutter_btn_name"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/shutterButtonName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_shuttername_hint"
            android:maxLength="8"
            android:maxLines="1" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/camera"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:entries="@array/selectCamera" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/picture_qual"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:entries="@array/pictureQuality"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/picSize"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:entries="@array/pictureSize"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/video_length"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerVLen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:entries="@array/videoLengths"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayoutPicTimeLength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textViewPicTimeLength"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/picTimeLength"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPicTimeLength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewPicTimeLength"
                android:layout_toRightOf="@+id/textViewPicTimeLength"
                android:entries="@array/pictureTimeLength"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayoutPicCountPerSecond"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp"
            android:paddingTop="5.0dp">

            <TextView
                android:id="@+id/textViewPicCountPerSecond"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/picCountPerSecond"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPicCountPerSecond"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewPicCountPerSecond"
                android:layout_toRightOf="@+id/textViewPicCountPerSecond"
                android:entries="@array/picturePerSecond"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dp">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/cancelButton"
                android:layout_toRightOf="@+id/cancelButton"
                android:text="@string/saveButton" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:text="@string/cancelButton" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FAQ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:background="#cbc8c2c8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans"
                android:text="@string/faq_settings_text"
                android:textColor="@color/actionbar_text"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:text="@string/frequently_asked_questions"
                android:textColor="@color/actionbar_text" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:background="#cbc8c2c8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans"
                android:text="@string/about"
                android:textColor="@color/actionbar_text"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:text="@string/settings_lil_info"
                android:textColor="@color/actionbar_text" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>