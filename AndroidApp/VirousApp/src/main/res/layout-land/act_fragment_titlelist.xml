<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <!-- List of Book Titles -->
    <Button
        android:text="@string/btn_frag_desc_text"
        android:id="@+id/btn_titlesactivity_open_dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"></Button>

    <fragment
        android:id="@+id/fragmentTitles"
        android:name="com.jingshuai.android.fregmentapp.fragment.TitlesListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <!-- Description of selected book -->
    <fragment
        android:id="@+id/fragmentDescription"
        android:name="com.jingshuai.android.fregmentapp.fragment.TitleDescriptionFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>