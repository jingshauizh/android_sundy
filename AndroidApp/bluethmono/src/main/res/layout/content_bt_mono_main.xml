<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mvp.jingshuai.bluethmono.BtMonoMainActivity"
    tools:showIn="@layout/act_bt_mono_main">


        <Button
            android:id="@+id/buttonOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ButtonOn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.483"
            app:layout_constraintRight_toLeftOf="@+id/buttonOff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <Button
            android:id="@+id/buttonOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ButtonOff"
            app:layout_constraintLeft_toRightOf="@+id/buttonOn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="90dp"
            app:layout_constraintVertical_bias="0.192" />

        <TextView
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="551dp"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_begin="249dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="249dp"
            tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
